<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="3"
    android:orientation="horizontal" >

    <com.oscasistemas.appgestionlogistica.utils.AutoResizeTextView
        android:id="@+id/campo1"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textColor="#F3F3F3"
        android:textSize="15sp" />

    <com.oscasistemas.appgestionlogistica.utils.AutoResizeTextView
        android:id="@+id/campo2"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/campo1"
        android:layout_toStartOf="@+id/item_counter"
        android:gravity="center"
        android:textColor="#F3F3F3"
        android:textSize="12sp" />

    <com.oscasistemas.appgestionlogistica.utils.AutoResizeTextView
        android:id="@+id/campo3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/campo2"
        android:layout_marginRight="5dp"
        android:layout_toStartOf="@+id/item_counter"
        android:layout_weight="2.73"
        android:gravity="center"
        android:textColor="#F3F3F3"
        android:textSize="15sp" />

</LinearLayout>
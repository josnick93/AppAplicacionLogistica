<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.oscasistemas.appgestionlogistica.Menu.MenuActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/sendTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.00"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="Crear Expedicion"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/textTitle"
            android:textIsSelectable="false"
            android:textSize="32dp" />

        <LinearLayout
            android:id="@+id/ClienteLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="0.00"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/ClienteText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cliente: "
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Spinner
                android:id="@+id/ClienteAlfabetoSpinner"
                android:layout_width="56dp"
                android:layout_height="39dp"
                android:background="@android:drawable/btn_default"
                android:spinnerMode="dialog"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/ClienteSpinner"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dialog"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/DireccionLayout"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/DireccionText"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_marginTop="10dp"
                android:text="Direccion: "
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Spinner
                android:id="@+id/DireccionSpinner"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dialog"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/TransportistaLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="0.00"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/TransText"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_marginTop="10dp"
                android:text="Transportista: "
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Spinner
                android:id="@+id/TrasnporsistaAlfabetoSpinner"
                android:layout_width="56dp"
                android:layout_height="39dp"
                android:background="@android:drawable/btn_default"
                android:spinnerMode="dialog"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/TransSpinner"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dialog"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/PortesLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="0.00"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/PortesText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Portes "
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Spinner
                android:id="@+id/PortesSpinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dialog"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/TipoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="0.00"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/TipoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Tipo Porte"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Spinner
                android:id="@+id/TipoSpinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dialog"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ReferenciaLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/ReferenciaText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Referencia "
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/ReferenciaEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/material_grey_300"
                android:ems="10" />

            <TextView
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.68" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/PesoLayout"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/info2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="114dp"
                android:layout_weight="0.19"
                android:text="" />

            <TextView
                android:id="@+id/PesoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.06"
                android:text="Peso "
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/PesoEdit"
                android:layout_width="57dp"
                android:layout_height="36dp"
                android:layout_weight="0.09"
                android:background="@color/material_grey_300"
                android:ems="10"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/PesoInfoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" .KG "
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="0.00" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.86"
                android:text="" />

            <Button
                android:id="@+id/CrearExpedicionBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="Crear" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.00" >

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="64dip"
                android:layout_height="64dip"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/back_icon" />

            <ImageButton
                android:id="@+id/homeBtn"
                android:layout_width="82dp"
                android:layout_height="match_parent"
                android:layout_marginStart="140dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/home_icon" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
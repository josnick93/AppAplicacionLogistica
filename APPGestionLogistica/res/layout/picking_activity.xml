<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.oscasistemas.appgestionlogistica.MainActivity" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/codigoPedido"
                android:layout_width="176dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.63"
                android:fontFamily="sans-serif-medium"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/textTitle"
                android:textIsSelectable="false"
                android:textSize="32dp" />

            <Button
                android:id="@+id/BotonFiltrado"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:text="Pendientes" />
        </LinearLayout>

        <TextView
            android:id="@+id/referenciaPedido"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/ArticleCode"
            android:fontFamily="sans-serif-medium"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/textTitle"
            android:textIsSelectable="false"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/Cliente"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_marginTop="10dp"
            android:background="@color/textFieldBackground"
            android:editable="false"
            android:ems="10"
            android:gravity="fill"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/textFieldText" >

            <requestFocus />
        </EditText>

        <ListView
            android:id="@+id/listaArticulosOrden"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_weight="0.04"
            android:background="@drawable/listview_border" >
        </ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.00" >

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="64dip"
                android:layout_height="64dip"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/back_icon" />

            <ImageButton
                android:id="@+id/homeBtn"
                android:layout_width="82dp"
                android:layout_height="match_parent"
                android:layout_marginStart="140dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/home_icon" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>